{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler", 
        "baseUrl": ".",
        "paths": {
            "@routes/*": [
                "src/routes/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ]
}