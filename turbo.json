{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "lib/**",
        "components/**",
        "tsconfig.json",
        "package.json",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "build:watch": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "lib/**",
        "components/**",
        ".eslintrc*",
        "eslint.config.*"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "lib/**",
        "components/**",
        "tsconfig.json"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "node_modules/.cache/**"
      ]
    },
    "db:check": {
      "cache": false,
      "dependsOn": [
        "^db:check"
      ]
    },
    "db:generate": {
      "cache": false,
      "dependsOn": [
        "^db:generate"
      ],
      "outputs": [
        "generated/**",
        "prisma/generated/**"
      ]
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": [
        "^db:migrate",
        "db:generate"
      ]
    }
  },
  "globalDependencies": [
    "package.json",
    "turbo.json",
    ".env*"
  ]
}